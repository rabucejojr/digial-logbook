# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173

# Database Configuration
DB_HOST=localhost
DB_PORT=27017
DB_NAME=dost_logbook
DB_USER=newadmin
DB_PASSWORD=newadmin123

# MongoDB URI (alternative to individual settings)
MONGODB_URI=mongodb://localhost:27017/dost_logbook

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-session-secret-key-change-this-in-production

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (if using email features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
COOKIE_SECURE=false
COOKIE_HTTP_ONLY=true

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# API Documentation
SWAGGER_TITLE=DOST Client Logbook API
SWAGGER_DESCRIPTION=Backend API for DOST Client Logbook System
SWAGGER_VERSION=1.0.0
